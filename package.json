  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "number-leading-zero": "never"
    }
  },
  "eslintConfig": {
    "extends": "vit/node",
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "class-methods-use-this": [
        0
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": 0
    }
  },
  "eslintIgnore": [
    "dist/**/*"
  ]
